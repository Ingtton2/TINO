<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name = "MyTimePickerX"
        parent="@android:style/Widget.Material.TimePicker">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:amPmTextColor">@color/colorPrimary</item>
    </style>

</resources>